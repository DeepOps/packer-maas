{
    "variables":
        {
            "dgxos5_iso": "/scratch/DGXOS-5.0.0-2020-10-01-18-07-44.iso",
            "dgxos5_sha256sum": "6e5c7ba2024640b3f23ec8681c15c8ccf8997a23da91c7e9d4eacf73bb564bee"
        },
    "builders": [
        {
            "type": "qemu",
            "communicator": "ssh",
            "ssh_username": "root",
            "ssh_timeout": "90m",
            "iso_url": "file:{{user `dgxos5_iso`}}",
            "iso_checksum": "sha256:{{user `dgxos5_sha256sum`}}",
            "boot_command": [
                "<down>e<down><down><end> ",
                "offwhendone ",
                "force-bootdisk=vda ",
                "no-mlnx-fw-update ",
                "ip=dhcp",
                "<f10>"
            ],
            "http_directory": "http",
            "boot_wait": "3s",
            "disk_size": "9G",
            "headless": true,
            "vnc_bind_address": "0.0.0.0",
            "memory": 2048,
            "qemuargs": [
                [ "-serial", "stdio" ]
            ],
            "shutdown_timeout": "45m"
        }
    ],
    "post-processors": [
        {
            "type": "shell-local",
            "inline_shebang": "/bin/bash -e",
            "inline": [
                "source ../scripts/setup-nbd",
                "TGZ_NAME='dgxos5.tar.gz'",
                "source ../scripts/tar-root"
            ]
        }
    ]
}
